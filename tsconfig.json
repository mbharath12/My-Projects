{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": ".build",
    "target": "es2019",
    //"strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    //"noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["cypress"],
    "paths": {
      "@helper/*": ["./src/helpers/*"],
      "@data/*": ["./src/data/*"],
      "@api-types/*": ["./node_modules/@canopyinc/api-docs/types/ts/*"]
    },
    "watch": false
  },
  "exclude": ["node_modules", "build"],
  "include": ["**/*.ts", "**/*.d.ts", "**/*.js"]
}
